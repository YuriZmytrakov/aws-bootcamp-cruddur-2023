#! /usr/bin/bash

if [ -z "$1" ]; then
  echo "No TASK_ID argument supplied eg ./bin/ecs/connect-to-service bc7e5930ccba4ee4af0c26e2c98a2512 backend-flask"
  exit 1
fi

TASK_ID=$1

if [ -z "$2" ]; then
  echo "No CONTAINER argument supplied eg ./bin/ecs/connect-to-service bc7e5930ccba4ee4af0c26e2c98a2512 backend-flask"
  exit 1
fi

CONTAINER_NAME=$2

aws ecs execute-command \
    --region $AWS_DEFAULT_REGION \
    --cluster cruddur \
    --task $TASK_ID \
    --container $CONTAINER_NAME \
    --command "/bin/bash" \
    --interactive